<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/design"
    tools:context=".ClientActivity">

  <TextView
      android:id="@+id/titleClient"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="48dp"
      android:layout_marginTop="28dp"
      android:text="Client"
      android:textColor="@color/white"
      android:textSize="30dp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraint"
      android:layout_width="350dp"
      android:layout_height="365dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="112dp"
      android:background="@drawable/forme2"
      android:backgroundTint="@color/transgris"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/EdsearchClient">

    <EditText
        android:id="@+id/Ednom"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/forme2"
        android:ems="10"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/txtNomCl"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Edprenom"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/forme2"
        android:color="#000000"
        android:ems="10"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/txtPrenomCl"
        app:layout_constraintTop_toBottomOf="@+id/Ednom" />

    <EditText
        android:id="@+id/Edadresse"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/forme2"
        android:color="#000000"
        android:ems="10"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/txtAdressCl"
        app:layout_constraintTop_toBottomOf="@+id/Edprenom" />

    <EditText
        android:id="@+id/Edtel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/forme2"
        android:color="#000000"
        android:ems="10"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/txtTelCl"
        app:layout_constraintTop_toBottomOf="@+id/Edadresse" />

    <EditText
        android:id="@+id/Edemail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/forme2"
        android:color="#000000"
        android:ems="10"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/txtEmailCl"
        app:layout_constraintTop_toBottomOf="@+id/Edfax" />

    <EditText
        android:id="@+id/Edfax"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/forme2"
        android:color="#000000"
        android:ems="10"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/txtFaxCL"
        app:layout_constraintTop_toBottomOf="@+id/Edtel" />

    <TextView
        android:id="@+id/txtEmailCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edfax" />

    <TextView
        android:id="@+id/txtFaxCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Fax "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edtel" />

    <TextView
        android:id="@+id/txtTelCl"
        android:layout_width="75dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Tel"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edadresse" />

    <TextView
        android:id="@+id/txtAdressCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Address"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edprenom" />

    <TextView
        android:id="@+id/txtPrenomCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Last Name"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ednom" />

    <TextView
        android:id="@+id/txtNomCl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="FirstName"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/transgris"
        android:src="@drawable/ic_first_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailCl" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:backgroundTint="@color/transgris"
        app:layout_constraintStart_toEndOf="@+id/first"
        app:layout_constraintTop_toBottomOf="@+id/Edemail"
        app:srcCompat="@drawable/ic_left_24" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/transgris"
        app:layout_constraintStart_toEndOf="@+id/previous"
        app:layout_constraintTop_toBottomOf="@+id/Edemail"
        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

    <ImageButton
        android:id="@+id/last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/transgris"
        app:layout_constraintStart_toEndOf="@+id/next"
        app:layout_constraintTop_toBottomOf="@+id/Edemail"
        app:srcCompat="@drawable/ic_last_24" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <EditText
      android:id="@+id/EdsearchClient"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="88dp"
      android:background="@drawable/forme2"
      android:backgroundTint="@color/transgris"
      android:ems="15"
      android:hint="Taper nom,adresse "
      android:textColorHint="#000"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/searchClient"
      android:layout_width="45dp"
      android:layout_height="40dp"
      android:layout_marginTop="84dp"
      android:backgroundTint="#ffff"
      android:src="@drawable/search"
      app:layout_constraintLeft_toRightOf="@id/EdsearchClient"
      app:layout_constraintTop_toTopOf="parent" />


  <ImageButton
      android:id="@+id/updateClient"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="52dp"
      android:backgroundTint="#ffff"
      android:src="@drawable/updateperson"
      android:text="update"
      android:textColor="@color/white"
      app:layout_constraintStart_toEndOf="@+id/addClient"
      app:layout_constraintTop_toBottomOf="@+id/EdsearchClient" />

  <ImageButton
      android:id="@+id/deleteClient"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="52dp"
      android:backgroundTint="#fff"
      android:src="@drawable/deleteperson"
      android:text="delete"
      android:textColor="@color/white"
      app:layout_constraintStart_toEndOf="@+id/updateClient"
      app:layout_constraintTop_toBottomOf="@+id/EdsearchClient" />

  <Button
      android:id="@+id/cancelClient"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="44dp"
      android:backgroundTint="#3695E1"
      android:ems="10"
      android:text="cancel"
      android:textColor="@color/white"
      android:visibility="invisible"
      app:layout_constraintStart_toEndOf="@+id/saveClient"
      app:layout_constraintTop_toBottomOf="@+id/constraint" />

  <ImageButton
      android:id="@+id/addClient"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="176dp"
      android:layout_marginTop="52dp"
      android:backgroundTint="#ffff"
      android:src="@drawable/addperson"
      android:text="add"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/EdsearchClient" />

  <Button
      android:id="@+id/saveClient"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="44dp"
      android:backgroundTint="#3695E1"
      android:ems="10"
      android:text="save"
      android:textColor="@color/white"
      android:visibility="invisible"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/constraint" />


</androidx.constraintlayout.widget.ConstraintLayout>